<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<link rel="stylesheet" href="/css/style.css">
<%- include('../partials/header') %>

<% if (subpage === 'list') { %>
    <h2>Pokémon Regions</h2>
    <div class="region-list">
      <% regions.forEach(region => { %>
        <a href="/regions/<%= region.name.toLowerCase() %>" class="region-card">
          <h3><%= region.name %></h3>
          <p><%= region.description %></p>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <h2><%= title %></h2>
    <div class="region-detail">
      <h3><%= region.name %></h3>
      <p><%= region.description %></p>
      
      <div class="region-info">
        <div>
          <h4>Gym Leades</h4>
          <ul>
            <% region.gymLeaders.forEach(leader => { %>
              <li><%= leader %></li>
            <% }) %>
          </ul>
        </div>
        <div>
          <h4>Starter Pokémon</h4>
          <ul>
            <% region.starterPokemon.forEach(pokemon => { %>
              <li><%= pokemon %></li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
    <a href="/regions" class="button">Back to All Regions</a>
  <% } %>
  <%- include('../partials/footer') %>
